    "babel": "^6.5.1",
    "babel-cli": "^6.5.1",
    "babel-plugin-transform-react-jsx": "^6.5.0",
    "babel-preset-es2015": "^6.5.0",
    "babel-preset-react": "^6.5.0",
    "babelify": "^7.2.0",
    "browserify": "^13.0.0",
    "budo": "^8.0.2",
