    "koa-router": "^5.3.0",
    "koa-static": "^2.0.0",
    "lodash": "^4.2.1",
    "path": "^0.12.7",
    "react": "^0.14.7",
    "react-dom": "^0.14.7",
    "react-dom-stream": "^0.5.0",
    "react-router": "^2.0.0-rc5",
    "rx": "^4.0.7",
